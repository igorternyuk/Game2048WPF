<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Statistics page styles-->

    <Style x:Key="TableBoardBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource BoardBackgroundColor}"></Setter>
        <Setter Property="Width" Value="{DynamicResource TableBorderWidth}"></Setter>
        <Setter Property="Height" Value="{DynamicResource TableBorderHeight}"></Setter>
        <Setter Property="CornerRadius" Value="5"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <Setter Property="Margin" Value="0,10,0,0"></Setter>
    </Style>

    <Style x:Key="StatisticsTableStyle" TargetType="{x:Type DataGrid}">
        <Setter Property="Background" Value="{StaticResource BoardBackgroundColor}"></Setter>
        <Setter Property="RowBackground" Value="{StaticResource TableRowBackgroundColor}"></Setter>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource TableRowBackgroundColor2}"></Setter>
        <Setter Property="Foreground" Value="{StaticResource TextColor}"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        <Setter Property="HeadersVisibility" Value="Column"></Setter>
        <Setter Property="AutoGenerateColumns" Value="False"></Setter>
        <Setter Property="IsReadOnly" Value="True"></Setter>
        <Setter Property="CanUserResizeColumns" Value="False"></Setter>
        <Setter Property="CanUserResizeRows" Value="False"></Setter>
        <Setter Property="SelectionMode" Value="Single"></Setter>
    </Style>

    <Style x:Key="StatisticsHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource TableHeaderBackgroundColor}"></Setter>
        <Setter Property="Foreground" Value="{StaticResource TextColor}"></Setter>
        <Setter Property="FontSize" Value="24"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
    </Style>

    <Style x:Key="StatisticsTableRowStyle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>
    </Style>

    <Style x:Key="LabelStyle" TargetType="{x:Type Label}">
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="FontSize" Value="30"></Setter>
        <Setter Property="Foreground" Value="{StaticResource TextColor}"></Setter>
        <Setter Property="FontFamily" Value="Tahoma"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
    </Style>
    
</ResourceDictionary>