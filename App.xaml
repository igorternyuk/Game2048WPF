<Application x:Class="Game2048.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Game2048"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/Styles/Menu.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/Styles/Info.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/Styles/GamePage.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/Styles/Statistics.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>

            <!-- Dynamic resources -->
            <sys:Double x:Key="CellSize">80</sys:Double>
            <sys:Double x:Key="TableBorderWidth">400</sys:Double>
            <sys:Double x:Key="TableBorderHeight">350</sys:Double>

        
        </ResourceDictionary>
    </Application.Resources>
</Application>
